@model ModelTest.Models.Message

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/css/styles.css" type="text/css">
</head>

<h1>Edit message</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="form-group">
                <input asp-for="Text" style="width:80%" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="hidden" name="themeId" value="@Model.Theme.Id" />
                <input type="submit" value="Cancel" asp-action="Index" asp-route-id="@Model.Theme.Id" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

